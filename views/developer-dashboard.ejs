<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>لوحة المطور: <%= developer.name %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Tajawal', sans-serif; background-color: #f4f6f9; }
        .navbar-brand { font-weight: 800; letter-spacing: 1px; }
        .card { border: none; border-radius: 12px; box-shadow: 0 2px 15px rgba(0,0,0,0.05); transition: .3s; }
        .card:hover { transform: translateY(-3px); }
        .wallet-card { background: linear-gradient(135deg, #2c3e50, #34495e); color: white; }
        .table thead th { background-color: #f8f9fa; font-weight: 600; color: #6c757d; border-bottom: 2px solid #dee2e6; }
        .status-badge { padding: 5px 10px; border-radius: 20px; font-size: 0.8rem; font-weight: 600; }
        .auth-box { background: #f8f9fa; padding: 4px 8px; border-radius: 4px; font-family: monospace; border: 1px solid #e9ecef; display: inline-block; font-size: 0.85rem; color: #d63384; }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#"><i class="bi bi-code-square me-2"></i> لوحة المطور: <%= developer.name %></a>
            <div class="d-flex gap-2">
                <a href="/dev/support" class="btn btn-warning btn-sm fw-bold text-dark"><i class="bi bi-headset"></i> الدعم الفني</a>
                <a href="/logout" class="btn btn-light btn-sm fw-bold text-primary"><i class="bi bi-box-arrow-left"></i> خروج</a>
            </div>
        </div>
    </nav>

    <div class="container pb-5">
        
        <!-- Wallet Section -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                <div class="card wallet-card text-center p-4 position-relative overflow-hidden">
                    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: url('https://www.transparenttextures.com/patterns/cubes.png'); opacity: 0.1;"></div>
                    <h5 class="text-white-50 mb-1">رصيد المحفظة الرئيسي</h5>
                    <h1 class="display-4 fw-bold mb-2 text-warning"><%= parseFloat(developer.wallet_balance).toFixed(2) %> <small class="fs-6 text-white">ج.م</small></h1>
                    <p class="small text-white-50 mb-3">* هذا الرصيد تستخدمه لتخصيص ميزانيات لشركاتك التابعة.</p>
                    <button class="btn btn-light btn-sm fw-bold px-4 rounded-pill" onclick="alert('لشحن الرصيد، يرجى التواصل مع الدعم الفني.')">
                        <i class="bi bi-wallet2 me-2"></i> شحن رصيد
                    </button>
                </div>
            </div>
        </div>

        <!-- Add Company Form -->
        <div class="card mb-4 border-primary border-opacity-25">
            <div class="card-header bg-white py-3 border-0">
                <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-plus-circle me-2"></i> إضافة عميل جديد</h5>
            </div>
            <div class="card-body">
                <form action="/dev/add-company" method="POST" class="row g-3">
                    <div class="col-md-4">
                        <input type="text" name="name" class="form-control" placeholder="اسم الشركة / النشاط" required>
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="tax_id" class="form-control" placeholder="الرقم الضريبي" required>
                    </div>
                    <div class="col-md-3">
                        <select name="country_code" class="form-select">
                            <option value="EG">مصر (E-Invoice)</option>
                            <option value="SA">السعودية (ZATCA)</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary fw-bold">إضافة الشركة</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Companies List -->
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold"><i class="bi bi-building me-2"></i> الشركات المسجلة</h5>
                <span class="badge bg-secondary"><%= companies.length %> شركة</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>الشركة</th>
                            <th>الرصيد المخصص</th>
                            <th>الفواتير</th>
                            <th width="30%">حساب المتجر (Login)</th>
                            <th class="text-center">إجراءات التحكم</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% companies.forEach(function(comp) { %>
                            <tr>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark"><%= comp.name %></span>
                                        <span class="small text-muted">
                                            <%= comp.country_code %> | <span class="font-monospace"><%= comp.tax_id %></span>
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <% if(comp.free_invoices_left > 0) { %>
                                        <span class="text-muted small">--</span>
                                    <% } else { %>
                                        <span class="fw-bold text-success"><%= parseFloat(comp.allocated_balance || 0).toFixed(2) %> ج.م</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if(comp.free_invoices_left > 0) { %>
                                        <span class="badge bg-success status-badge mb-1">تجربة: <%= comp.free_invoices_left %></span>
                                    <% } else { %>
                                        <div class="small">
                                            <span class="text-muted">المتبقي:</span>
                                            <strong><%= (comp.invoice_limit || 0) - (comp.invoices_used || 0) %></strong>
                                        </div>
                                    <% } %>
                                </td>
                                
                                <!-- بيانات الدخول -->
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="auth-info">
                                            <div class="mb-1">
                                                <i class="bi bi-person text-muted"></i> 
                                                <!-- عرضنا هنا اسم الشركة كـ User مؤقتاً، لكن عند التعديل سنعرض الاسم الجديد -->
                                                <span class="auth-box" id="username-display-<%= comp.id %>">
                                                    store_<%= comp.id %>
                                                </span>
                                            </div>
                                            <div>
                                                <i class="bi bi-key text-muted"></i> 
                                                <span class="auth-box">******</span>
                                            </div>
                                        </div>
                                        <button class="btn btn-sm btn-outline-secondary border-0" 
                                                onclick="openAuthModal('<%= comp.id %>', '<%= comp.name %>', 'store_<%= comp.id %>')"
                                                title="تعديل بيانات الدخول">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                    </div>
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <!-- الأزرار تستدعي المودال عبر الـ ID فقط -->
                                        <button class="btn btn-success btn-sm fw-bold px-3" onclick="openAllocateModal('<%= comp.id %>', '<%= comp.name %>')">
                                            <i class="bi bi-cash-coin me-1"></i> تحويل رصيد
                                        </button>
                                        
                                        <button class="btn btn-light btn-sm border" onclick="openCredsModal('<%= comp.id %>', '<%= comp.name %>', '<%= comp.country_code %>')">
                                            <i class="bi bi-gear-fill"></i>
                                        </button>
                                        
                                        <a href="/docs?company_id=<%= comp.id %>" class="btn btn-primary btn-sm">
                                            <i class="bi bi-code-slash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- =================== MODALS (خارج الجدول) =================== -->

    <!-- 1. Modal تعديل بيانات دخول المتجر -->
    <div class="modal fade" id="authUpdateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/dev/update-store-auth" method="POST">
                    <div class="modal-header bg-dark text-white">
                        <h5 class="modal-title"><i class="bi bi-person-lock me-2"></i> بيانات دخول المتجر</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="company_id" id="auth_company_id">
                        <p class="text-muted mb-3">تعديل بيانات الدخول لمتجر: <strong id="auth_company_name" class="text-dark"></strong></p>
                        
                        <div class="mb-3">
                            <label class="form-label">اسم المستخدم الجديد</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" name="new_username" id="auth_new_username" class="form-control" required minlength="4">
                            </div>
                            <small class="text-muted">يستخدمه العميل للدخول إلى بوابة المتجر</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">كلمة المرور الجديدة</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key"></i></span>
                                <input type="text" name="new_password" class="form-control" required minlength="6">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                        <button type="submit" class="btn btn-primary px-4">حفظ التغييرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- 2. Modal تحويل الرصيد -->
    <div class="modal fade" id="allocateModal" tabindex="-1">
        <div class="modal-dialog">
            <form action="/dev/allocate-balance" method="POST" class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">تحويل رصيد لـ <span id="alloc_company_name"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-start">
                    <input type="hidden" name="company_id" id="alloc_company_id">
                    
                    <!-- هنا نعرض رصيد المطور بشكل صحيح -->
                    <div class="alert alert-info py-2 small">
                        رصيد محفظتك الحالي: <strong><%= parseFloat(developer.wallet_balance).toFixed(2) %> ج.م</strong>
                    </div>
                    
                    <label class="form-label">المبلغ المراد تخصيصه (ج.م)</label>
                    <input type="number" name="amount" class="form-control" min="1" step="0.01" required>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success w-100">تأكيد التحويل</button>
                </div>
            </form>
        </div>
    </div>

    <!-- 3. Modal إعدادات الربط -->
    <div class="modal fade" id="credsModal" tabindex="-1">
        <div class="modal-dialog">
            <form action="/dev/company/update-creds" method="POST" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">إعدادات الربط: <span id="creds_company_name"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-start">
                    <input type="hidden" name="company_id" id="creds_company_id">
                    <input type="hidden" name="country_code" id="creds_country_code">
                    
                    <div id="egypt_fields" style="display:none;">
                        <div class="mb-2">
                            <label>Client ID (ETA)</label>
                            <input type="text" name="client_id" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2">
                            <label>Client Secret (ETA)</label>
                            <input type="text" name="client_secret" class="form-control form-control-sm">
                        </div>
                    </div>

                    <div id="saudi_fields" style="display:none;">
                        <div class="mb-2">
                            <label>OTP (ZATCA)</label>
                            <input type="text" name="otp" class="form-control form-control-sm">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-sm w-100">حفظ الإعدادات</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // دوال لفتح المودال (لتجنب مشاكل التداخل)
        
        function openAuthModal(id, name, currentUsername) {
            document.getElementById('auth_company_id').value = id;
            document.getElementById('auth_company_name').innerText = name;
            // حاول وضع الاسم الحالي إن وجد
            const displayEl = document.getElementById('username-display-' + id);
            if(displayEl) document.getElementById('auth_new_username').value = displayEl.innerText.trim();
            
            new bootstrap.Modal(document.getElementById('authUpdateModal')).show();
        }

        function openAllocateModal(id, name) {
            document.getElementById('alloc_company_id').value = id;
            document.getElementById('alloc_company_name').innerText = name;
            new bootstrap.Modal(document.getElementById('allocateModal')).show();
        }

        function openCredsModal(id, name, countryCode) {
            document.getElementById('creds_company_id').value = id;
            document.getElementById('creds_company_name').innerText = name;
            document.getElementById('creds_country_code').value = countryCode;
            
            if(countryCode === 'EG') {
                document.getElementById('egypt_fields').style.display = 'block';
                document.getElementById('saudi_fields').style.display = 'none';
            } else {
                document.getElementById('egypt_fields').style.display = 'none';
                document.getElementById('saudi_fields').style.display = 'block';
            }
            
            new bootstrap.Modal(document.getElementById('credsModal')).show();
        }

        // التحقق من رسائل النجاح وتحديث الواجهة
        const urlParams = new URLSearchParams(window.location.search);
        if(urlParams.get('msg') === 'auth_updated') {
            alert('✅ تم تحديث بيانات دخول المتجر بنجاح!');
            // تنظيف الرابط
            window.history.replaceState({}, document.title, window.location.pathname);
        }
    </script>
</body>
</html>
