<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>انضم كشريك تطوير | MetaConnect</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background: #f0f2f5; display: flex; align-items: center; justify-content: center; min-height: 100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .register-card { width: 100%; max-width: 700px; border: none; border-radius: 16px; box-shadow: 0 15px 35px rgba(0,0,0,0.08); background: white; padding: 40px; position: relative; overflow: hidden; margin: 20px; }
        .register-card::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 5px; background: linear-gradient(90deg, #198754, #20c997); }
        .section-title { font-size: 1rem; color: #198754; font-weight: 700; margin-bottom: 20px; display: flex; align-items: center; gap: 10px; background: #e9f7ef; padding: 10px 15px; border-radius: 8px; }
        .form-control, .form-select { padding: 12px; border-radius: 8px; border: 1px solid #dee2e6; transition: all 0.3s; }
        .form-control:focus, .form-select:focus { border-color: #198754; box-shadow: 0 0 0 4px rgba(25, 135, 84, 0.1); }
        .btn-submit { background: linear-gradient(135deg, #198754 0%, #146c43 100%); border: none; padding: 14px; font-size: 1.1rem; font-weight: bold; border-radius: 8px; width: 100%; color: white; transition: 0.3s; margin-top: 20px; }
        .btn-submit:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(25, 135, 84, 0.3); }
        
        /* Password Eye Icon */
        .password-wrapper { position: relative; }
        .toggle-password { position: absolute; left: 15px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #6c757d; }
        .toggle-password:hover { color: #198754; }

        /* Security Overlay Styles */
        .security-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(15, 23, 42, 0.95); z-index: 9999;
            display: none; flex-direction: column; align-items: center; justify-content: center;
            color: #0f0; font-family: 'Courier New', monospace;
        }
        .security-icon { font-size: 4rem; margin-bottom: 20px; animation: pulse 1.5s infinite; }
        .progress-bar-custom { width: 300px; height: 4px; background: #333; border-radius: 2px; overflow: hidden; margin-top: 20px; }
        .progress-fill { height: 100%; background: #0f0; width: 0%; transition: width 0.3s; box-shadow: 0 0 10px #0f0; }
        @keyframes pulse { 0% { opacity: 0.6; transform: scale(1); } 50% { opacity: 1; transform: scale(1.1); } 100% { opacity: 0.6; transform: scale(1); } }
        .check-item { margin: 5px 0; opacity: 0; transform: translateY(10px); transition: all 0.3s; display: flex; align-items: center; gap: 10px; }
        .check-item.show { opacity: 1; transform: translateY(0); }
        .check-item i { color: #0f0; }
    </style>
</head>
<body>

    <!-- Security Processing Overlay -->
    <div class="security-overlay" id="securityOverlay">
        <i class="fas fa-shield-alt security-icon"></i>
        <div class="text-center" id="securitySteps"></div>
        <div class="progress-bar-custom"><div class="progress-fill" id="progressFill"></div></div>
    </div>

    <div class="register-card">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-dark">MetaConnect <span class="text-success">Partner</span></h2>
            <p class="text-muted">بوابة المطورين الآمنة - تسجيل حساب جديد</p>
        </div>

        <form id="regForm" action="/register-dev" method="POST">
            
            <div class="section-title"><i class="fas fa-building"></i> هوية الكيان</div>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label small text-muted">اسم الشركة / المطور</label>
                    <input type="text" name="name" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label small text-muted">الموقع الرسمي (إن وجد)</label>
                    <input type="url" name="website" class="form-control" placeholder="https://">
                </div>
            </div>

            <div class="section-title"><i class="fas fa-address-card"></i> بيانات التواصل</div>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label small text-muted">المسؤول التقني</label>
                    <input type="text" name="contact_person" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label small text-muted">رقم الهاتف المعتمد</label>
                    <input type="tel" name="phone" class="form-control" required>
                </div>
                <div class="col-md-12">
                    <label class="form-label small text-muted">نطاق العمل (الدولة)</label>
                    <select name="country" class="form-select" required>
                        <option value="" disabled selected>-- اختر الدولة --</option>
                        <option value="KSA">المملكة العربية السعودية (ZATCA Compliant)</option>
                        <option value="EG">جمهورية مصر العربية (ETA Compliant)</option>
                        <option value="OTHER">دولي (Global)</option>
                    </select>
                </div>
            </div>

            <div class="section-title"><i class="fas fa-user-lock"></i> الأمان والحماية</div>
            <div class="row g-3 mb-4">
                <div class="col-md-12">
                    <label class="form-label small text-muted">البريد الإلكتروني الرسمي</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
                
                <!-- كلمة المرور مع زر العين -->
                <div class="col-md-6">
                    <label class="form-label small text-muted">كلمة المرور</label>
                    <div class="password-wrapper">
                        <input type="password" name="password" id="password" class="form-control" required>
                        <i class="fas fa-eye toggle-password" onclick="togglePass('password', this)"></i>
                    </div>
                </div>
                
                <!-- تأكيد كلمة المرور -->
                <div class="col-md-6">
                    <label class="form-label small text-muted">تأكيد كلمة المرور</label>
                    <div class="password-wrapper">
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" required>
                        <i class="fas fa-eye toggle-password" onclick="togglePass('confirm_password', this)"></i>
                    </div>
                </div>

                <!-- سؤال الأمان -->
                <div class="col-md-12 mt-3">
                    <div class="alert alert-light border">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        <small>هذا السؤال سيستخدمه فريق الدعم للتحقق من هويتك في حال فقدان الحساب.</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label small text-muted">سؤال الأمان</label>
                    <select name="security_question" class="form-select" required>
                        <option value="" disabled selected>-- اختر سؤال أمان --</option>
                        <option value="first_car">ما هو نوع أول سيارة امتلكتها؟</option>
                        <option value="pet_name">ما هو اسم حيوانك الأليف المفضل؟</option>
                        <option value="childhood_friend">ما هو اسم صديق طفولتك؟</option>
                        <option value="mother_maiden">ما هو اسم عائلة والدتك قبل الزواج؟</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label small text-muted">إجابة سؤال الأمان</label>
                    <input type="text" name="security_answer" class="form-control" placeholder="اكتب الإجابة هنا..." required>
                </div>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-rocket me-2"></i> بدء عملية التسجيل الآمن
            </button>
            
            <div class="text-center mt-4">
                <a href="/login" class="text-decoration-none text-muted small">
                    <i class="fas fa-sign-in-alt me-1"></i> مسجل بالفعل؟ دخول
                </a>
            </div>
        </form>
    </div>

    <script>
        // دالة إظهار/إخفاء كلمة المرور
        function togglePass(inputId, icon) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        document.getElementById('regForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // التحقق من تطابق كلمة المرور
            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirm_password').value;

            if (pass !== confirm) {
                alert("❌ كلمات المرور غير متطابقة! يرجى التأكد منها.");
                return;
            }

            // بدء أنيميشن الأمان
            const overlay = document.getElementById('securityOverlay');
            const stepsContainer = document.getElementById('securitySteps');
            const progress = document.getElementById('progressFill');
            const form = this;
            
            overlay.style.display = 'flex';

            const steps = [
                "جاري تشفير البيانات المدخلة (AES-256)...",
                "التحقق من سجلات الأمان والجدار الناري...",
                "تشفير إجابة سؤال الأمان (Hashing)...",
                "إنشاء مفاتيح API الخاصة بالمطور...",
                "تم التحقق بنجاح! جاري تحويلك..."
            ];

            let currentStep = 0;

            function showNextStep() {
                if (currentStep < steps.length) {
                    const div = document.createElement('div');
                    div.className = 'check-item';
                    div.innerHTML = `<i class="fas fa-check-circle"></i> <span>${steps[currentStep]}</span>`;
                    stepsContainer.appendChild(div);
                    
                    setTimeout(() => div.classList.add('show'), 50);
                    progress.style.width = `${((currentStep + 1) / steps.length) * 100}%`;
                    currentStep++;
                    
                    const delay = Math.random() * 600 + 400; 
                    setTimeout(showNextStep, delay);
                } else {
                    setTimeout(() => {
                        form.submit();
                    }, 500);
                }
            }
            showNextStep();
        });
    </script>

</body>
</html>
